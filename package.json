{
  "name": "careermate-desktop",
  "version": "1.0.0",
  "description": "CareerMate Desktop Application - Your AI-powered career assistant for resume building, job search, and interview preparation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-builder --mac",
    "package-win": "electron-builder --win",
    "package-all": "electron-builder -mw",
    "publish": "electron-builder --publish always"
  },
  "author": {
    "name": "Adhyot Tech",
    "email": "adhyottech@gmail.com"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/suveerkh/careermate"
  },
  "license": "MIT",
  "build": {
    "appId": "com.adhyottech.careermate",
    "productName": "CareerMate",
    "copyright": "Copyright Â© 2025 Adhyot Tech",
    "mac": {
      "category": "public.app-category.education",
      "icon": "icons/icon-512x512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.plist",
      "entitlementsInherit": "entitlements.plist",
      "target": [
        "dmg",
        "zip"
      ],
      "artifactName": "CareerMate-${version}-mac.${ext}"
    },
    "win": {
      "icon": "icons/icon-512x512.png",
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "CareerMate-${version}-win.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "extraResources": [
      {
        "from": "../",
        "to": "app",
        "filter": [
          "**/*",
          "!**/.git/**",
          "!**/node_modules/**",
          "!**/desktop/**",
          "!**/__pycache__/**",
          "!**/*.pyc"
        ]
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "canvas": "^3.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.4",
    "python-shell": "^5.0.0"
  }
}
